<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    Smoke Suite: Critical path tests (Login + Add to Cart + Checkout)
-->
<suite name="Smoke Test Suite" verbose="1" parallel="false">

    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="Smoke Tests - Critical Path" group-by-instances="true">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="validLoginTest"/>
                </methods>
            </class>

            <class name="tests.ProductsTest">
                <methods>
                    <include name="verifyProductsTitleTest"/>
                    <include name="Add2ItmesTest"/>
                </methods>
            </class>

            <class name="tests.CheckoutTests">
                <methods>
                    <include name="SuccessfulCheckoutTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>