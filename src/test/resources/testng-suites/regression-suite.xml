<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    Regression Suite Complete test coverage
-->
<suite name="Regression Test Suite" verbose="1" parallel="classes" thread-count="3">

    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="Login Tests">
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <test name="Products Tests">
        <classes>
            <class name="tests.ProductsTest"/>
        </classes>
    </test>

    <test name="Product Details Tests">
        <classes>
            <class name="tests.ProductDetailsPageTest"/>
        </classes>
    </test>

    <test name="Cart Tests">
        <classes>
            <class name="tests.CartTests"/>
        </classes>
    </test>

    <test name="Checkout Tests">
        <classes>
            <class name="tests.CheckoutTests"/>
        </classes>
    </test>

</suite>