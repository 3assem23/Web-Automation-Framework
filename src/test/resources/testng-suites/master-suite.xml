<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    Master Suite Runs All Test Suites
-->
<suite name="SauceDemo Master Test Suite" verbose="1" parallel="false">

    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="listeners.SuiteListener"/>
        <listener class-name="listeners.RetryListener"/>
    </listeners>

    <suite-files>
        <suite-file path="smoke-suite.xml"/>
        <suite-file path="regression-suite.xml"/>
    </suite-files>

</suite>