        <classes>
            <class name="tests.ProductsTest"/>
        </classes>
    </test>

    <!-- Product Details Tests (7 tests) -->
    <test name="03 - Product Details Tests" preserve-order="true">
        <classes>
            <class name="tests.ProductDetailsPageTest"/>
        </classes>
    </test>

    <!-- Cart Tests (5 tests) -->
